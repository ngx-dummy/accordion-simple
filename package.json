{
	"name": "accordion-simple-lib--project",
	"version": "0.4.18",
	"license": "LGPLV3",
	"description": "A simple accordion component to use in Angular / Ionic projects .. (WIP) and sample app using it",
	"keywords": [
		"accordion",
		"accordion-component",
		"accordion component",
		"accordion-simple",
		"simple accordion",
		"Angular",
		"Ionic",
		"Typescript",
		"Javascript",
		"widget",
		"foldable",
		"collapse",
		"expandable",
		"toggle",
		"ui"
	],
	"private": false,
	"author": {
		"name": "Vladimir Ovsyukov",
		"email": "ovsyukov@yandex.com"
	},
	"engines": {
		"node": ">=12.16.2",
		"npm": ">=6.12.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ngx-dummy/accordion-simple.git"
	},
	"bugs": {
		"email": "ovsyukov@yandex.com",
		"url": "https://github.com/ngx-dummy/accordion-simple/issues"
	},
	"homepage": "https://github.com/ngx-dummy/accordion-simple#README",
	"scripts": {
		"clean:docs": "rimraf ./docs/*",
		"build": "ng b",
		"build:prod": "ng b --configuration production",
		"build:sample": "ng b accordion-sample",
		"build:sample:prod": "ng b accordion-sample --configuration production  -- --base-href /accordion-simple/",
		"sample": "ng serve accordion-sample -o --host 0.0.0.0 --port 8881 --live-reload",
		"clean:dist": "rimraf ./dist/**",
		"sample:prod": "ng serve accordion-sample -o --host 0.0.0.0 --port 8882 --live-reload --configuration production",
		"ci:publish:exec": "sh ./scripts/publish.sh",
		"ci:publish:full": "run-s clean:dist ci:publish:exec",
		"docs:gh-pages": "sh ./scripts/docs.sh",
		"docs:typedocs": "sh ./scripts/typedocs.sh",
		"docs": "run-s clean:docs docs:gh-pages docs:typedocs",
		"e2e": "ng e2e accordion-sample --webdriverUpdate=true --protractorConfig=projects/accordion-sample/e2e/protractor.conf.js",
		"lint": "ng lint",
		"lint:fix": "ng lint --fix",
		"lint:full": "npm run eslint && npm run stylelint",
		"lint:full:fix": "run-s eslint:fix stylelint:fix",
		"eslint": "eslint .",
		"eslint:fix": "eslint . --fix",
		"stylelint": "stylelint \"projects/**/src/**/*.scss\"",
		"stylelint:fix": "stylelint \"projects/**/src/**/*.scss\" --fix",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write . --ignore-unknown",
		"prepush:origin": "npm run docs",
		"push:origin": "sh ./scripts/push.sh",
		"test:lib": "ng test",
		"test:sample": "ng test accordion-sample",
		"test": "run-p test:lib test:sample",
		"test:ci": "ng test --karma-config=karma-ci.conf.js --no-watch --progress=false",
		"postinstall": "ngcc --tsconfig \"./projects/@ngx-dummy/accordion-simple/tsconfig.lib.json\"",
		"pretty-quick": "pretty-quick --staged",
		"prerelease": "run-s pretty-quick build:prod build:sample:prod  docs",
		"release": "sh ./scripts/release.sh"
	},
	"dependencies": {
		"@angular/animations": "^12.2.8",
		"@angular/common": "^12.2.8",
		"@angular/compiler": "^12.2.8",
		"@angular/core": "^12.2.8",
		"@angular/forms": "^12.2.8",
		"@angular/platform-browser": "^12.2.8",
		"@angular/platform-browser-dynamic": "^12.2.8",
		"@angular/router": "^12.2.8",
		"@material/button": "^13.0.0",
		"@material/card": "^13.0.0",
		"@material/drawer": "^13.0.0",
		"@material/fab": "^13.0.0",
		"@material/layout-grid": "^13.0.0",
		"@material/menu": "^13.0.0",
		"@material/ripple": "^13.0.0",
		"@material/top-app-bar": "^13.0.0",
		"rxjs": "^7.3.1",
		"tslib": "^2.3.1",
		"zone.js": "~0.11.4"
	},
	"devDependencies": {
		"@angular-devkit/architect": "^0.1202.8",
		"@angular-devkit/build-angular": "^12.2.8",
		"@angular-devkit/core": "^12.2.8",
		"@angular-eslint/builder": "^12.5.0",
		"@angular-eslint/eslint-plugin": "^12.5.0",
		"@angular-eslint/eslint-plugin-template": "^12.5.0",
		"@angular-eslint/schematics": "^12.5.0",
		"@angular-eslint/template-parser": "^12.5.0",
		"@angular/cli": "^12.2.8",
		"@angular/compiler-cli": "^12.2.8",
		"@angular/language-service": "^12.2.8",
		"@types/jasmine": "^3.9.1",
		"@types/jasminewd2": "^2.0.10",
		"@types/node": "^16.10.3",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/eslint-plugin-tslint": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"chalk": "^4.1.2",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsdoc": "^36.1.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.2",
		"jasmine-core": "^3.9.0",
		"jasmine-spec-reporter": "^7.0.0",
		"karma": "^6.3.4",
		"karma-chrome-launcher": "^3.1.0",
		"karma-coverage-istanbul-reporter": "^3.0.3",
		"karma-jasmine": "^4.0.1",
		"karma-jasmine-html-reporter": "^1.7.0",
		"lodash": "^4.17.21",
		"ng-packagr": "^12.2.2",
		"node-jq": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"ora": "^6.0.1",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"protractor": "^7.0.0",
		"rimraf": "^3.0.2",
		"shelljs": "^0.8.4",
		"simple-git": "^2.46.0",
		"stylelint": "^13.13.1",
		"stylelint-config-airbnb": "^0.0.0",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-property-sort-order-smacss": "^7.1.0",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-sass-guidelines": "^8.0.0",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-declaration-strict-value": "^1.7.12",
		"stylelint-declaration-use-variable": "^1.7.3",
		"stylelint-order": "^4.1.0",
		"stylelint-prettier": "^1.2.0",
		"stylelint-scss": "^3.21.0",
		"ts-node": "^10.2.1",
		"typedoc": "^0.22.5",
		"typescript": "~4.3.5"
	}
}
